<div class="container text-center">
<h1>User List</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User Email</th>
      <th scope="col">Username</th>
      <th scope="col">Payment</th>
      <th scope="col">Stripe ID</th>
      <th scope="col">Stripe Email</th>
      <th scope="col">Subscription ID</th>
      <th scope="col">Admin</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= link_to user.name, "/user/#{user.id}/change" %></td>
      <td><%= user.payment %></td>
      <td><%= user.stripe_id %></td>
      <td><%= user.stripe_email %></td>
      <td><%= user.subscription_id %></td>
      <td><%= user.admin %></td>
    </tr>
    <% end %>
  <tbody>
  </tbody>
</table>
</div>
